<div class="container">
  <% if @moderator.errors.any? %>
    <div id="validation_errors">
      <h2><%= pluralize(@moderator.errors.count, "error") %> prohibited this moderator from being saved:</h2>
      <ul>
        <% @moderator.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="col-md-5 col-md-offset-3">
    <div class="jumbotron vertical-center" id="jumbo">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Edit Moderators</h3>
        </div>
        <div class="panel-body">

            <%= form_for [:admin, @moderator] do |f| %>
                <div class="form-group">
                    <%= f.label :fullname %>
                    <%= f.text_field :fullname, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :username %>
                    <%= f.text_field :username, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.label :password %>
                    <%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
                </div>
                <div class="actions form-group">
                    <%= f.submit "Submit", class: 'btn btn-primary' %>
                </div>
            <% end %>
        </div> <!--panel-body-->
      </div> <!--panel-defalut-->
    </div> <!--jumbotron-->
  </div> <!--col-->
</div> <!--container-->
            